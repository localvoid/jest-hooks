{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/cjs",
    "declarationDir": "dist/typings",
    "types": ["node", "jest"],

    "target": "ES2020",
    "module": "CommonJS",
    "incremental": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": false,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
